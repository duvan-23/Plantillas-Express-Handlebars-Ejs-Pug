<h2 style="color:crimson;">Historial{{personas.length}}</h2>
{{#if personas.length }}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>Nombre</th> <th>Apellido</th> <th>Edad</th> </tr>
            {{#each  personas }}
                {{#with this}}
                    <tr>
                        <td>{{nombre}}</td>
                        <td>{{apellido}}</td>
                        <td>{{edad}}</td>
                    </tr>
                {{/with}}
            {{/each}}
        </table>
    </div>
{{else}}
    <h3 class="alert alert-danger">no se encontraron datos</h1
>{{/if}}